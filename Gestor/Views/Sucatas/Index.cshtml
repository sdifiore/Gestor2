            @Html.DisplayFor(modelItem => item.Jumbo216)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubProduto)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Edit", new { id = item.SucataId })<br />
            @Html.ActionLink("Detalhes", "Details", new { id = item.SucataId })<br />
            @Html.ActionLink("Eliminar", "Delete", new { id = item.SucataId })
        </td>
    </tr>
